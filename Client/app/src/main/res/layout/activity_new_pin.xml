<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.coding.team.meetpin.activities.NewPinActivity">

    <Button
            android:text="Pick date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickDateButton" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/datePickerDialog" android:onClick="pickDate"/>
    <TextView
            android:text="Date Picker Dialog"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/datePickerDialog" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pickDateButton"
            android:layout_marginBottom="410dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
</android.support.constraint.ConstraintLayout>
