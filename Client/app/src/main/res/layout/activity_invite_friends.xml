<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.InviteFriendsActivity">

    <Button
            android:text="@string/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/invite" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp" android:layout_marginTop="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="243dp"
            app:layout_constraintEnd_toStartOf="@+id/cancel" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
    />
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel" android:layout_marginEnd="85dp" android:layout_marginRight="85dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="243dp"
            android:layout_marginTop="56dp"/>

    <TextView
            android:text="Enter email address"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/emailText" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            android:layout_marginEnd="130dp" android:layout_marginRight="130dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="131dp" android:layout_marginStart="131dp"
            android:textColor="@android:color/white" android:textSize="18sp"
    />
    <EditText
            android:id="@+id/sendEmail"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"
            android:layout_height="65dp" android:layout_width="337dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/invite" android:inputType="textEmailAddress"/>

</android.support.constraint.ConstraintLayout>