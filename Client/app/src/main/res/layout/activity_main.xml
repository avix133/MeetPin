<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.coding.team.meetpin.activities.MainActivity"
        tools:layout_editor_absoluteY="81dp">

    <Button
            android:id="@+id/mapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Map"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/friendsListButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="19dp"
            android:layout_marginEnd="20dp" app:layout_constraintVertical_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/friendsListButton" android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/friendsListButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/mapButton" app:layout_constraintEnd_toStartOf="@+id/logOutButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="38dp"/>

    <WebView
            android:id="@+id/joey"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/logOutButton" android:layout_marginBottom="86dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logOutButton"
            style="@style/Widget.AppCompat.Button"
            app:layout_constraintStart_toEndOf="@+id/friendsListButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/joey" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>
