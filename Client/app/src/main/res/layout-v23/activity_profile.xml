<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.coding.team.meetpin.activities.MainActivity"
        tools:layout_editor_absoluteY="81dp">

    <Button
            android:id="@+id/mapButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="Map"
            style="@android:style/Widget.Material.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textColor="@android:color/black"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/joey" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/friendsListButton"/>

    <Button
            android:id="@+id/friendsListButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="Friends"
            style="@android:style/Widget.Material.Button.Colored" app:layout_constraintTop_toBottomOf="@+id/mapButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textColor="@android:color/black"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/inviteFriendButton"/>

    <Button
            android:id="@+id/inviteFriendButton"
            android:layout_width="116dp"
            android:layout_height="51dp"
            android:text="Invite Friend"
            style="@android:style/Widget.Material.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/friendsListButton" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/logOutButton"/>
    <WebView
            android:id="@+id/joey"
            android:layout_width="398dp"
            android:layout_height="251dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/mapButton"/>
    <Button
            android:text="Log Out"
            android:layout_width="116dp"
            android:layout_height="48dp"
            android:id="@+id/logOutButton"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textColor="@android:color/black"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/inviteFriendButton"
            app:layout_constraintVertical_bias="0.081" android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>
